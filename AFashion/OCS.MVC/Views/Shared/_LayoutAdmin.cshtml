<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/external")
    @Styles.Render("~/Content/custom")

    <title>@ViewBag.Title</title>
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top navbar-admin">
        <div class="container">
            <div class="navbar-header navbar-left">
                @Html.ActionLink("Browse", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-header">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add Product", "AddProduct", "Product")</li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
