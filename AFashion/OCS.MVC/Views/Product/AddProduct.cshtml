@model OCS.MVC.Models.CreateProductViewModel

@{
    ViewBag.Title = "Add Product";
}

<div class="row fashion-form">
    <div class="col-md-6 col-md-offset-3">
        <h3>Create Product</h3>
        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data",  @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Category, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.Category, (SelectList)ViewData["Categories"], "Select Category", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Brand, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.Brand, (SelectList)ViewData["Brands"], "Select Brand", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Brand, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Image, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Image, new { @type = "file", @class="fileInput" })
                    @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-default fashion-form-btn" value="Add" />
                </div>
            </div>
        }
    </div>
</div>